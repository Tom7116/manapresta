{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="col-xs-12 card py-3">

            <div class="d-flex justify-content-around">
                <div><i>{{ employers|length }} employeur(s) enregistré(s)</i></div>
                <div class="text-center"><a href="{{ path('employer_new') }}" class="btn btn-outline-dark darkRedColor mb-3"><i class="fas fa-plus"></i> Ajouter un employeur</a></div>
            </div>

            {% if employers == false %}
                <div class="text-center text-secondary"><i>Vous n'avez pas encore enregistré d'employeurs.</i></div>
            {% else %}
            <table class="table table-sm table-striped table-responsive-xl bg-white border border-dark text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Date d'ajout</th>
                    </tr>
                </thead>

                <tbody>
                    {% for employer in employers %}
                        <tr>
                            <td><a href="{{ path('employer_edit', { 'id': employer.id }) }}" class="employerColor">{{ employer.name }}</a></td>
                            <td>{{ employer.address }}</td>
                            <td>{% if employer.createdAt %}{{ employer.createdAt|date('d/m/Y') }}{% endif %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% endif %}

        </div>
    </div>
{% endblock %}
